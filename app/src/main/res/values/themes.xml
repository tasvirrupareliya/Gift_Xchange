<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GiftXchange" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.GiftXchange" parent="Base.Theme.GiftXchange" />

    <style name="AllButton">
        <item name="android:background">@drawable/custom_button_theme</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CancelButton">
        <item name="android:background">@drawable/cancel_button_theme</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="fabButton">
        <item name="android:background">@drawable/custom_button_theme</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="RatingTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_big</item>
        <item name="android:layout_marginLeft">@dimen/margin_extra_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_big</item>
        <item name="android:layout_marginRight">@dimen/margin_extra_big</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="RatingMessageText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/margin_big</item>
        <item name="android:layout_marginLeft">@dimen/margin_big</item>
        <item name="android:layout_marginEnd">@dimen/margin_big</item>
        <item name="android:layout_marginRight">@dimen/margin_big</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

</resources>