<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/grey" /> <!-- Background color when pressed -->
                <corners android:radius="@dimen/_40sdp" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/black" /> <!-- Default background color -->
                <corners android:radius="@dimen/_40sdp" />
            </shape>
        </item>
</selector>